@{
    ViewData["Title"] = "Honeypot example";
}

<section>
 <div class="alert" asp-validation-summary="All">

 </div>

 
    <h1 class="display-4">Request Limit Example</h1>
    <form 
    role="form"
    asp-action="HoneypotPost" 
    asp-controller="Home" 
    method="post" 
    asp-route-returnurl="/">
    <honeypot-field name="Username" label="Username" placeholder="Username  ..." type="text"></honeypot-field>
    <honeypot-field name="password" label="Password" placeholder="Password ..." type="password"></honeypot-field>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</section>


<style>
  .alert ul {
    list-style-type: none;
  }
  
  .alert ul li {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
    font-size: 18px;
    padding: 20px 20px;
    width: 90%;
    border-radius : 10px;
  }

  .mask{
        opacity: 0;
        position: absolute;
        top: 0;
        left: 0;
